# Vapor API Environment Variables
# Copy to .env and fill in your values

# ===================
# Database (Required)
# ===================
# Supabase PostgreSQL connection string
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://postgres:[YOUR_PASSWORD]@db.[YOUR_PROJECT_REF].supabase.co:5432/postgres

# ===================
# Authentication
# ===================
# Supabase JWT secret (from Supabase Dashboard > Settings > API > JWT Secret)
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-dashboard

# API keys for admin endpoints (comma-separated)
# Generate secure random keys for production
API_KEYS=admin-key-1,admin-key-2

# ===================
# Optional
# ===================
# Log level (trace, debug, info, notice, warning, error, critical)
LOG_LEVEL=info

# Server port (default: 8080)
# PORT=8080
